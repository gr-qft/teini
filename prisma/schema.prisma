datasource db {
  provider = "sqlite"
  url      = "file:../public/products.db"
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id             Int          @id @default(autoincrement())
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  slug           String
  name           String
  description    String
  price          Int
  currency       String
  availability   String
  shippingCode   ShippingCode @relation(fields: [shippingCodeId], references: [id])
  shippingCodeId Int
  brand          Brand        @relation(fields: [brandId], references: [id])
  brandId        Int

}

model Brand {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]
}

model ShippingCode {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  Product     Product[]
}

